<section id="projects" class="padding-block">
  <div class="container">
    <div class="flow">
      <h2 class="heading-2">Projects</h2>
      <div class="projects__grid">
        {
          projectsContent.map(({ image, title, description, tags }) => {
            return (
              <article class="card">
                <img class="card__image" src={image} />
                <div class="card__content flow">
                  <h3 class="heading-3">{title}</h3>
                  <p>{description}</p>
                  <ul class="card__list">
                    {tags.map((label) => {
                      return (
                        <li>
                          <label.icon />
                          {label.name}
                        </li>
                      );
                    })}
                  </ul>
                </div>
              </article>
            );
          })
        }
      </div>
    </div>
  </div>
</section>

<style>
  .projects__grid {
    display: grid;
    gap: 0.5rem;
  }
  @media screen and (min-width: 425px ) {
    .projects__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media screen and (min-width: 768px) {
    .projects__grid {
      grid-template-columns: repeat(4, 1fr);
    }
    .projects__grid > *:nth-child(1) {
      grid-column: 1 / 3;
    }
    .projects__grid > *:nth-child(5) {
      grid-column: 2 / 4;
    }
    .projects__grid > *:nth-child(9) {
      grid-column: span 2;
    }
  }
  .card {
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.2);
  }
  .card__image {
    width: 100%;
    min-height: 180px;
    object-fit: cover;
    object-position: center;
    max-height: 240px;
  }
  .card__content {
    padding: 1rem;
  }
  .card__content p {
    font-size: var(--fs-small);
  }
  .card__list {
    list-style: none;
    padding: 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
  .card__list li {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: var(--fs-smaller);
    padding: 0.25rem 0.5rem;
    border-radius: 1rem;
    background-color: rgb(128, 103, 240);
    color: var(--clr-white);
  }
  .card__list li *:first-child {
    width: 1rem;
    aspect-ratio: 1;
  }
</style>
